{% extends 'base.html.twig' %}

{% block title %}Exchange Rates{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form method="post" action="exchange/result">
        <div class="form-group">
            <label for="currencyin">
                {{ 'currency'|title }}
            </label>
            <select class="form-control"
                    name="currencyin"
                    id="currencyin"
                    required>
                {% for currencycode in currencycodes %}
                    <option>{{ currencycode }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="currencyout">
                {{ 'currency'|title }}
            </label>
            <select class="form-control"
                    name="currencyout"
                    id="currencyout"
                    required>
                {% for currencycode in currencycodes %}
                    <option>{{ currencycode }}</option>
                {% endfor %}
            </select>
        </div>
        <div>
            <label for="amount">{{ 'Amount' }}</label>
            <input class="form-control" type="text" name="amount" id="amount" required>
        </div>
        <input class="btn btn-primary" type="submit" value="{{ 'Bereken' }}"></div>
    </form>
</div>
{% endblock %}
